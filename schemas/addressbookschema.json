{
  "title":"Address Book",
  "type":"array",
  "items":
  [
    {
      "title":"Address Book Entry",
      "type":"object",
      "properties":
      {
        "firstName":
        {
          "required":true,
          "type":"string",
          "title":"First Name"
        },
        "lastName":
        {
          "required":true,
          "type":"string",
          "title":"Last Name"
        },
        "organizations":
        {
          "description":"A list of organizations with which this person is affiliated.",
          "title":"Affiliations",
          "type":"array",
          "items":
          [
            {
              "required":true,
              "title":"Organization",
              "type":"object",
              "properties":
              {
                "name":
                {
                  "required":true,
                  "type":"string",
                  "title":"Organization Name"
                },
                "title":
                {
                  "type":"string",
                  "title":"Title/Role"
                },
                "department":
                {
                  "type":"string",
                  "title":"Department"
                },
                "type":
                {
                  "title":"Type",
                  "enum":
                  [
                    "job",
                    "school",
                    "other"
                  ],
                  "type":"string",
                  "description":"What is the nature of this person's affiliation with the organization?"
                }
              },
              "additionalProperties":false
            }
          ]
        },
        "addresses":
        {
          "title":"Mailing/Street Addresses",
          "type":"array",
          "items":
          [
            {
              "required":true,
              "title":"Address",
              "type":"object",
              "properties":
              {
                "streetAddress":
                {
                  "required":true,
                  "type":"string",
                  "title":"Street Address"
                },
                "locality":
                {
                  "required":true,
                  "type":"string",
                  "title":"City (locality)"
                },
                "region":
                {
                  "required":true,
                  "type":"string",
                  "title":"State/Provence/Region"
                },
                "postalCode":
                {
                  "description":"Post office code, such as zip code in the U.S.  If editing this data in JSON or YAML format directly, be sure to quote this as a string so that leading zeros aren't stripped.",
                  "type":"string",
                  "required":true,
                  "title":"Postal (Zip) Code"
                },
                "country":
                {
                  "required":true,
                  "type":"string",
                  "title":"Country"
                }
              },
              "additionalProperties":false
            }
          ]
        },
        "phoneNumbers":
        {
          "title":"Phone number(s)",
          "type":"array",
          "items":
          [
            {
              "required":true,
              "title":"Phone number",
              "type":"object",
              "properties":
              {
                "workhomeother":
                {
                  "enum":
                  [
                    "Work",
                    "Home",
                    "Mobile",
                    "Fax",
                    "Other"
                  ],
                  "title":"Work/Home/Other",
                  "type":"string",
                  "required":true,
                  "description":"Is this number a work phone, home phone, etc?"
                },
                "Number":
                {
                  "required":true,
                  "type":"string"
                },
                "comment":
                {
                  "type":"string",
                  "title":"Comment"
                }
              },
              "additionalProperties":false
            }
          ]
        },
        "emails":
        {
          "title":"Email addresses",
          "type":"array",
          "items":
          [
            {
              "required":true,
              "title":"Email",
              "type":"object",
              "properties":
              {
                "type":
                {
                  "enum":
                  [
                    "work",
                    "home",
                    "other"
                  ],
                  "title":"Work/Home/Other",
                  "type":"string",
                  "required":true,
                  "description":"Is this email address a work address, home address, etc?"
                },
                "value":
                {
                  "required":true,
                  "type":"string",
                  "title":"Address"
                },
                "primary":
                {
                  "title":"Primary?",
                  "type":"boolean",
                  "required":true,
                  "description":"Is this the primary email address for this person?"
                }
              },
              "additionalProperties":false
            }
          ]
        },
        "ims":
        {
          "title":"IM Accounts",
          "type":"array",
          "items":
          [
            {
              "required":true,
              "title":"Account",
              "type":"object",
              "properties":
              {
                "type":
                {
                  "enum":
                  [
                    "aim",
                    "gtalk",
                    "icq",
                    "xmpp",
                    "msn",
                    "skype",
                    "qq",
                    "yahoo"
                  ],
                  "title":"Service",
                  "required":true,
                  "desc_enum":
                  {
                    "qq":"QQ (Tencent)",
                    "gtalk":"GTalk (Google)",
                    "xmpp":"XMPP/Jabber",
                    "yahoo":"Yahoo!",
                    "aim":"AIM (AOL)",
                    "msn":"MSN (Microsoft)",
                    "skype":"Skype",
                    "icq":"ICQ"
                  },
                  "type":"string",
                  "description":"What is the service provider/protocol associated with this instant messaging address?"
                },
                "value":
                {
                  "required":true,
                  "type":"string",
                  "title":"Account ID"
                }
              },
              "additionalProperties":false
            }
          ]
        }
      },
      "additionalProperties":false
    }
  ]
}
